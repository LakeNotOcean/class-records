{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"monorepo": true,
	"root": "apps/class-record-api",
	"sourceRoot": "apps/class-record-api/src",
	"compilerOptions": {
		"webpack": true,
		"typeCheck": true,
		"tsConfigPath": "apps/class-record-api/tsconfig.app.json"
	},
	"projects": {
		"data-generator": {
			"type": "application",
			"root": "apps/data-generator",
			"entryFile": "main",
			"sourceRoot": "apps/data-generator/src",
			"compilerOptions": {
				"tsConfigPath": "apps/data-generator/tsconfig.app.json"
			}
		},
		"class-record-api": {
			"type": "application",
			"root": "apps/class-record-api",
			"entryFile": "main",
			"sourceRoot": "apps/class-record-api/src",
			"compilerOptions": {
				"tsConfigPath": "apps/class-record-api/tsconfig.app.json"
			}
		},
		"common": {
			"type": "library",
			"root": "libs/common",
			"entryFile": "index",
			"sourceRoot": "libs/common/src",
			"compilerOptions": {
				"tsConfigPath": "libs/common/tsconfig.lib.json"
			}
		}
	}
}
